@page "/rolehierarchymapping"
@using AuthManagement.Models
@using AuthManagement.Helpers
@using AuthManagement.Services
@using AuthManagement.Shared
@inject RBACService RBACService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<RoleHierarchyMapping> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]
@inject IJSRuntime JS
<PageTitle>Role Hierarchy Mapping</PageTitle>
<script src="js/InputFocus.js"></script>

<div class="flex-grow-1">
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else{

     <div class="page-header">
        <h1 class="page-title">Role Hierarchy Mapping</h1>
        <nav>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                   
                    <a href="/" class="breadcrumb-link">
                        <i class="ti tabler-home"></i>Home
                    </a>
                    <span class="breadcrumb-separator">></span>
                </li>
                <li class="">
                    <span class="breadcrumb-current">Role Hierarchy Mapping</span>
                </li>
            </ul>
        </nav>
    </div>

    <div class="mapping-container">
        <div class="toolbar-container">
            <div class="toolbar-left">
                <span class="mappings-list-label">Mappings List</span>
            </div>
            <div class="toolbar-right">
                <div class="search-box">
                    <input type="text"
                           class="search-input"
                           placeholder="Search mappings..."
                           value="@_searchString"
                           @oninput="@((e) => OnSearchChanged(e.Value?.ToString() ?? string.Empty))" />
                    @if (string.IsNullOrEmpty(_searchString))
                    {
                        <i class="ti tabler-search search-icon"></i>
                    }
                </div>
                @if (_canCreate)
                {
                    <button class="add-button" @onclick="OpenAddDialog" disabled="@_isSaving">
                        <i class="ti tabler-plus"></i>
                        <span>Add Mapping</span>
                    </button>
                }
            </div>
        </div>
        @if (_isLoading)
        {
            <div class="loading-container">
                <div class="spinner"></div>
                <p class="loading-text">Loading role hierarchy mappings...</p>
            </div>
        }
        else if (_hasError)
        {
            <div class="error-container">
                <div class="error-message">
                    <i class="ti tabler-alert-triangle"></i>
                    <span>@_errorMessage</span>
                </div>
            </div>
        }
        else if (_pagedMappings != null && _pagedMappings.Any())
        {
            <table class="mapping-table">
                <thead>
                    <tr>
                            <th class="plusHeading"></th>

                        <th class="sortable" @onclick='() => ToggleSort("no")'>
                            #
                            <span class="sort-indicator">
                                <span class="sort-arrow up @(_sortColumn == "no" && _sortDirection == "asc" ? "active" : "")"></span>
                                <span class="sort-arrow down @(_sortColumn == "no" && _sortDirection == "desc" ? "active" : "")"></span>
                            </span>
                        </th>
                        <th class="sortable" @onclick='() => ToggleSort("department")'>
                            DEPARTMENT
                            <span class="sort-indicator">
                                <span class="sort-arrow up @(_sortColumn == "department" && _sortDirection == "asc" ? "active" : "")"></span>
                                <span class="sort-arrow down @(_sortColumn == "department" && _sortDirection == "desc" ? "active" : "")"></span>
                            </span>
                        </th>
                        <th class="sortable" @onclick='() => ToggleSort("parent")'>
                            PARENT ROLE
                            <span class="sort-indicator">
                                <span class="sort-arrow up @(_sortColumn == "parent" && _sortDirection == "asc" ? "active" : "")"></span>
                                <span class="sort-arrow down @(_sortColumn == "parent" && _sortDirection == "desc" ? "active" : "")"></span>
                            </span>
                        </th>
                        <th class="sortable" @onclick='() => ToggleSort("child")'>
                            CHILD ROLE
                            <span class="sort-indicator">
                                <span class="sort-arrow up @(_sortColumn == "child" && _sortDirection == "asc" ? "active" : "")"></span>
                                <span class="sort-arrow down @(_sortColumn == "child" && _sortDirection == "desc" ? "active" : "")"></span>
                            </span>
                        </th>
                        <th class="text-center">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mapping in _pagedMappings)
                    {
                        <tr>
                                <td class="details-control" @onclick="@(() => ShowDetails(mapping))">
                                    <div class="plus" style="border-radius: 50%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        box-sizing: content-box;
                        border: 2px solid var(--bs-paper-bg);
                        background-color: var(--bs-primary);
                        block-size: .85rem;
                        box-shadow: 0 0 3px var(--bs-gray-800);
                        color: var(--bs-white);    width: 17px;
            height: 17px;">
                                        <i class="ti tabler-plus"></i>
                                    </div>
                                </td>

                            <td><span class="serial-number">@GetGlobalSerialNumber(mapping)</span></td>
                            <td><span class="role-name">@mapping.DepartmentName</span></td>
                            <td><span class="role-name">@mapping.ParentRoleName</span></td>
                            <td><span class="role-name">@mapping.ChildRoleName</span></td>
                            <td>
                                <div class="action-buttons">
                                    @if (_canView)
                                    {
                                        <button class="action-btn view-btn"
                                                @onclick="() => OpenViewDialog(mapping)"
                                                title="View Details">
                                            <i class="ti tabler-eye"></i>
                                        </button>
                                    }
                                    @if (_canEdit)
                                    {
                                        <button class="action-btn edit-btn"
                                                @onclick="() => OpenEditDialog(mapping)"
                                                title="Edit">
                                            <i class="ti tabler-edit"></i>
                                        </button>
                                    }
                                    @if (_canDelete)
                                    {
                                        <button class="action-btn delete-btn"
                                                @onclick="() => DeleteMapping(mapping)"
                                                title="Delete">
                                            <i class="ti tabler-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- Pagination -->
                <div class="pagination-container">
                    <div class="pagination-controls">
                        @* mobile  screen *@
                        @{
                            var range = GetMobilePageRange();
                        }
                        <div class="pagination-buttons mobile-only">

                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">
                                @_currentPage
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>

                        </div>

                        <div class="pagination-buttons web-Only">
                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                var pageNum = i;
                                <button class="page-btn @(_currentPage == pageNum ? "active" : "")"
                                        @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            }

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
        }
        else
        {
            <NoResultsFound Message="No role hierarchy mappings found" 
                           IconClass="ti tabler-hierarchy-off"
                           SearchTerm="@_searchString" />
        }
    </div>
}
</div>
<RoleHierarchyMappingFormDialog IsOpen="@_isDialogOpen"
                                 IsEditMode="@_isEditMode"
                                 IsSaving="@_isSaving"
                                 FormModel="@_mappingModel"
                                 Departments="@_departments"
                                 FilteredRoles="@_filteredRoles"
                                 OnCancel="@CloseDialog"
                                 OnSubmit="@HandleSubmit"
                                 OnDepartmentChanged="@OnDepartmentChangedFromDialog" />

<RoleHierarchyMappingDetailsOffcanvas IsOpen="@_isOffcanvasOpen"
                                       Mapping="@_selectedMapping"
                                       OnClose="@CloseOffcanvas" />


@if (showPopup && selectedFeature != null)
{

    <div class="modal-backdrop show" @onclick:stopPropagation="true"></div>
    <div class="modal show d-block" tabindex="-1" @onclick:stopPropagation="true">
        <div class="modal-dialog modal-dialog-top">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Role Hierarchy Mapping 
                    </h5>
                    <button type="button" class="btn-close" @onclick="closeSelectFeatures"></button>
                </div>
                <div class="modal-body" style="padding: 24px;">
                    <p><b>Department:</b> @selectedFeature.DepartmentName</p>
                    <p><b>Parent Role:</b> @selectedFeature.ParentRoleName</p>
                    <p><b>Child Role:</b> @selectedFeature.ChildRoleName</p>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<RoleHierarchyMappingDto> _mappings = new();
    private List<RoleHierarchyMappingDto> _filteredMappings = new();
    private List<RoleHierarchyMappingDto> _pagedMappings = new();
    private List<DepartmentDto> _departments = new();
    private List<RoleDto> _roles = new();
    private List<RoleDto> _filteredRoles = new();
    private RoleHierarchyMappingDto? _selectedMapping;
    private RoleHierarchyMappingFormDialog.MappingFormModel _mappingModel = new();
    private bool _isLoading = true;
    private bool _isSaving = false;
    private bool _isDialogOpen = false;
    private bool _isOffcanvasOpen = false;
    private bool _isEditMode = false;
    private bool _hasError = false;
    private string _errorMessage = string.Empty;
    private string _searchString = string.Empty;
    private string _sortColumn = "";
    private string _sortDirection = "";
    private int _currentPage = 1;
    private int _pageSize = 10;
    private int _totalItems = 0;
    private int _totalPages = 1;
    private bool _canView = false;
    private bool _canCreate = false;
    private bool _canEdit = false;
    private bool _canDelete = false;
    bool showPopup = false;
    RoleHierarchyMappingDto? selectedFeature;

 void closeSelectFeatures()
 {
     showPopup=false;
 }
    void ShowDetails(RoleHierarchyMappingDto feature)
 {
     selectedFeature = feature;
     showPopup = true;
 }

 void ClosePopup()
 {
     showPopup = false;
 }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
    }
    // pagination
    private (int start, int end) GetMobilePageRange()
    {
        int start = _currentPage;
        int end = _currentPage + 1;
        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }
        return (start, end);
    }
    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("RoleHierarchyMapping page initializing...");

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                Logger.LogWarning("User not authenticated, redirecting to login");
                NavigationManager.NavigateTo("/login");
                return;
            }

            Logger.LogInformation("User authenticated: {Email}", authState.User.Identity?.Name);

            var permissions = await PermissionService.GetPagePermissionsAsync("RoleHierarchyMapping");
            _canView = permissions.CanView;
            _canCreate = permissions.CanAdd;
            _canEdit = permissions.CanEdit;
            _canDelete = permissions.CanDelete;

            Logger.LogInformation("Permissions set - View: {View}, Create: {Create}, Edit: {Edit}, Delete: {Delete}",
                _canView, _canCreate, _canEdit, _canDelete);

            await LoadData();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing RoleHierarchyMapping page");
            _hasError = true;
            _errorMessage = $"Error initializing page: {ex.Message}";
            _isLoading = false;
        }
    }

    private async Task LoadData()
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            var departmentsTask = RBACService.GetAllDepartmentsAsync();
            var rolesTask = RBACService.GetAllRolesAsync();
            var mappingsTask = RBACService.GetAllRoleHierarchyMappingsAsync();

            await Task.WhenAll(departmentsTask, rolesTask, mappingsTask);

            var departmentsResponse = await departmentsTask;
            var rolesResponse = await rolesTask;
            var mappingsResponse = await mappingsTask;

            if (departmentsResponse.Success && departmentsResponse.Data != null)
            {
                _departments = departmentsResponse.Data.Where(d => d.IsActive).ToList();
            }

            if (rolesResponse.Success && rolesResponse.Data != null)
            {
                _roles = rolesResponse.Data;
            }

            if (mappingsResponse.Success && mappingsResponse.Data != null)
            {
                _mappings = mappingsResponse.Data;
            }

            UpdateFilteredMappings();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading data");
            _hasError = true;
            _errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void UpdateFilteredMappings()
    {
        if (string.IsNullOrWhiteSpace(_searchString))
        {
            _filteredMappings = _mappings.ToList();
        }
        else
        {
            _filteredMappings = _mappings
                .Where(m => FilterFunc(m))
                .ToList();
        }
        _filteredMappings = (_sortColumn, _sortDirection) switch
        {
            ("no", "asc") => _filteredMappings.OrderBy(m => _mappings.IndexOf(m)).ToList(),
            ("no", "desc") => _filteredMappings.OrderByDescending(m => _mappings.IndexOf(m)).ToList(),
            ("department", "asc") => _filteredMappings.OrderBy(m => m.DepartmentName).ToList(),
            ("department", "desc") => _filteredMappings.OrderByDescending(m => m.DepartmentName).ToList(),
            ("parent", "asc") => _filteredMappings.OrderBy(m => m.ParentRoleName).ToList(),
            ("parent", "desc") => _filteredMappings.OrderByDescending(m => m.ParentRoleName).ToList(),
            ("child", "asc") => _filteredMappings.OrderBy(m => m.ChildRoleName).ToList(),
            ("child", "desc") => _filteredMappings.OrderByDescending(m => m.ChildRoleName).ToList(),
            _ => _filteredMappings // Preserve original order from API (descending by date)
        };

        _totalItems = _filteredMappings.Count;
        _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;

        if (_currentPage > _totalPages)
        {
            _currentPage = _totalPages;
        }
        if (_currentPage < 1)
        {
            _currentPage = 1;
        }

        _pagedMappings = _filteredMappings
            .Skip((_currentPage - 1) * _pageSize)
            .Take(_pageSize)
            .ToList();
    }

    private void OnSearchChanged(string value)
    {
        _searchString = value;
        _currentPage = 1;
        UpdateFilteredMappings();
        StateHasChanged();
    }
    private void ClearSearch()
    {
        _searchString = string.Empty;
        _currentPage = 1;
        UpdateFilteredMappings();
        StateHasChanged();
    }

    private void ToggleSort(string column)
    {
        if (_sortColumn == column)
        {
            _sortDirection = _sortDirection == "asc" ? "desc" : "asc";
        }
        else
        {
            _sortColumn = column;
            _sortDirection = "asc";
        }
        UpdateFilteredMappings();
        StateHasChanged();
    }

    private bool FilterFunc(RoleHierarchyMappingDto mapping)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        var searchLower = _searchString.ToLower();
        return mapping.ParentRoleName.ToLower().Contains(searchLower) ||
               mapping.ChildRoleName.ToLower().Contains(searchLower);
    }

    private int GetGlobalSerialNumber(RoleHierarchyMappingDto mapping)
    {
        var index = _filteredMappings.IndexOf(mapping);
        return index + 1;
    }

    private int GetStartRecord()
    {
        return _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    }

    private int GetEndRecord()
    {
        return Math.Min(_currentPage * _pageSize, _totalItems);
    }

    private int GetStartPage()
    {
        return Math.Max(1, _currentPage - 2);
    }

    private int GetEndPage()
    {
        return Math.Min(_totalPages, _currentPage + 2);
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= _totalPages)
        {
            _currentPage = page;
            UpdateFilteredMappings();
            StateHasChanged();
        }
    }

    async Task OpenAddDialog()
    {
        _selectedMapping = null;
        _isEditMode = false;
        _mappingModel = new RoleHierarchyMappingFormDialog.MappingFormModel();
        _filteredRoles = new List<RoleDto>();
        _isDialogOpen = true;
        await JS.InvokeVoidAsync("disableScroll");
        await JS.InvokeVoidAsync("focusInputById", "popupFirstInput");

    }

    async Task OpenEditDialog(RoleHierarchyMappingDto mapping)
    {
        _selectedMapping = mapping;
        _isEditMode = true;
        await JS.InvokeVoidAsync("disableScroll");
        _mappingModel = new RoleHierarchyMappingFormDialog.MappingFormModel
            {
                DepartmentId = mapping.ParentDepartmentId?.ToString() ?? "",
                ParentRoleId = mapping.ParentRoleId.ToString(),
                ChildRoleId = mapping.ChildRoleId.ToString()
            };

        // Load filtered roles for the selected department
        if (!string.IsNullOrEmpty(_mappingModel.DepartmentId))
        {
            var departmentId = Guid.Parse(_mappingModel.DepartmentId);
            _filteredRoles = _roles.Where(r => r.DepartmentId == departmentId).ToList();
        }

        _isDialogOpen = true;
    }

    async Task OpenViewDialog(RoleHierarchyMappingDto mapping)
    {
        _selectedMapping = mapping;
        _isOffcanvasOpen = true;
        await JS.InvokeVoidAsync("disableScroll");
    }

    async Task CloseDialog()
    {
        _isDialogOpen = false;
        _selectedMapping = null;
        _mappingModel = new RoleHierarchyMappingFormDialog.MappingFormModel();
        _isEditMode = false;
        _filteredRoles = new List<RoleDto>();
        await JS.InvokeVoidAsync("enableScroll");
    }

    async Task CloseOffcanvas()
    {
        _isOffcanvasOpen = false;
        _selectedMapping = null;
        await JS.InvokeVoidAsync("enableScroll");
    }

    private void OnDepartmentChangedFromDialog(string departmentId)
    {
        if (string.IsNullOrEmpty(departmentId))
        {
            _filteredRoles = new List<RoleDto>();
        }
        else
        {
            var deptId = Guid.Parse(departmentId);
            _filteredRoles = _roles.Where(r => r.DepartmentId == deptId).ToList();
        }

        // Reset role selections when department changes
        _mappingModel.ParentRoleId = string.Empty;
        _mappingModel.ChildRoleId = string.Empty;
        StateHasChanged();
    }

    private async Task HandleSubmit(RoleHierarchyMappingFormDialog.MappingFormModel model)
    {
        _isSaving = true;
        try
        {
            var parentRoleId = Guid.Parse(model.ParentRoleId);
            var childRoleId = Guid.Parse(model.ChildRoleId);

            if (parentRoleId == childRoleId)
            {
                await JS.InvokeVoidAsync("showToast", "error", "Parent and child roles cannot be the same");
                _isSaving = false;
                return;
            }

            //  DUPLICATE CHECK
            var isDuplicate = _mappings.Any(m => 
                m.ParentRoleId == parentRoleId && 
                m.ChildRoleId == childRoleId && 
                (!_isEditMode || m.Id != _selectedMapping?.Id));

            if (isDuplicate)
            {
                var parentName = _roles.FirstOrDefault(r => r.Id == parentRoleId)?.Name ?? "Unknown Parent Role";
                var childName = _roles.FirstOrDefault(r => r.Id == childRoleId)?.Name ?? "Unknown Child Role";
                await JS.InvokeVoidAsync("showToast", "error", $"Duplicate hierarchy mapping: {parentName} â†’ {childName} already exists");
                _isSaving = false;
                return;
            }

            if (_isEditMode && _selectedMapping != null)
            {
                var updateRequest = new UpdateRoleHierarchyMappingRequest
                    {
                        Id = _selectedMapping.Id,
                        ParentRoleId = parentRoleId,
                        ChildRoleId = childRoleId,
                        Level = 1
                    };

                var response = await RBACService.UpdateRoleHierarchyMappingAsync(_selectedMapping.Id, updateRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Role hierarchy mapping updated successfully");
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to update role hierarchy mapping"));
                }
            }
            else
            {
                var createRequest = new CreateRoleHierarchyMappingRequest
                    {
                        ParentRoleId = parentRoleId,
                        ChildRoleId = childRoleId,
                        Level = 1
                    };

                var response = await RBACService.CreateRoleHierarchyMappingAsync(createRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Role hierarchy mapping created successfully");
                    await LoadData();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to create role hierarchy mapping"));
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving role hierarchy mapping");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}");
        }
        finally
        {
            _isSaving = false;
            await JS.InvokeVoidAsync("enableScroll");
        }
    }

    private async Task DeleteMapping(RoleHierarchyMappingDto mapping)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation",
                "Delete Role Hierarchy Mapping",
                $"Are you sure you want to delete the mapping between '{mapping.ParentRoleName}' and '{mapping.ChildRoleName}'? This action cannot be undone.");

            if (confirmed)
            {
                var response = await RBACService.DeleteRoleHierarchyMappingAsync(mapping.Id);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Role hierarchy mapping deleted successfully");
                    await LoadData();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to delete role hierarchy mapping"));
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting role hierarchy mapping");
            await JS.InvokeVoidAsync("showToast", "error", $"Error deleting role hierarchy mapping: {ex.Message}");
        }
    }
}