@page "/feature"
@using AuthManagement.Models
@using AuthManagement.Helpers
@using AuthManagement.Services
@using AuthManagement.Shared
@inject RBACService RBACService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<Feature> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]
@inject IJSRuntime JS
<PageTitle>Feature Management</PageTitle>

<script src="js/InputFocus.js"></script>

<style>
    .toolbar-container {
        background: transparent;
        padding: 0;
        padding-bottom: 19px;
    }

    .pagination-container {
        background: transparent;
        border: none;
        margin-top: 37px;
    }

    .page-btn {
        background: white;
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    }
</style>

<div class="flex-grow-1">
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else
    {
        <div class="page-header" >
            <h1 class="page-title">Features List</h1>
            <nav>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#" class="breadcrumb-link">
                            <i class="ti tabler-home"></i> Home
                        </a>
                        <span class="breadcrumb-separator">></span>
                    </li>
                    <li>
                        <span class="breadcrumb-current">Features</span>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="feature-container" id="DepartmentDarktheme">

            <!-- Toolbar -->
            <div class="toolbar-container" id="DepartmentDarktheme">
                <div class="toolbar-right">
                    <div class="search-box">
                        <input type="text"
                               class="search-input"
                               placeholder="Search features..."
                               value="@_searchString"
                               @oninput="e => OnSearchChanged(e.Value?.ToString() ?? string.Empty)" />

                        @if (string.IsNullOrEmpty(_searchString))
                        {
                            <i class="ti tabler-search search-icon"></i>
                        }
                    </div>

                    @if (_canAdd)
                    {
                        <button class="add-button"
                                @onclick="OpenAddDialog"
                                disabled="@_isSaving">
                            <i class="ti tabler-plus"></i>
                            <span>Add Feature</span>
                        </button>
                    }
                </div>
            </div>

            @if (_hasError)
            {
                <div class="alert alert-danger m-3" role="alert">
                    <i class="ti tabler-alert-circle me-2"></i>@_errorMessage
                </div>
            }
            else if (_pagedFeatures != null && _pagedFeatures.Any())
            {
                <div class="row g-4">
                    @foreach (var feature in _pagedFeatures)
                    {
                        var borderColor = FeaturesColors.TryGetValue(feature.Id, out var color)
                        ? color
                        : "rgb(200,200,200)";

                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="dept-card">

                                <div class="Badges" style="background:@borderColor;">
                                    @feature.CreatedAt.ToString("MMMdd")
                                </div>

                                <div class="Image">
                                    <img src="assets/img/avatars/Department.png" alt="Department" />
                                </div>

                                <span class="dept-code" style="font-size:11px;color:#666;font-weight:600;text-transform:uppercase;letter-spacing:0.5px;">@feature.Code</span>
                                <h2 class="dept-name">@feature.Name</h2>
                                <p class="dept-desc">@feature.Description</p>

                                <div class="Actions"
                                     style="--accent-color:@borderColor; background:@borderColor;">

                                    <div class="action-icon">
                                        <i class="ti tabler-eye"
                                           @onclick="() => OpenViewDialog(feature)"></i>
                                    </div>

                                    <div class="action-icon">
                                        <i class="ti tabler-edit"
                                           @onclick="() => OpenEditDialog(feature)"></i>
                                    </div>

                                    <div class="action-icon">
                                        <i class="ti tabler-trash"
                                           @onclick="() => DeleteFeature(feature)"></i>
                                    </div>

                                </div>

                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                <div class="pagination-container" id="DepartmentDarktheme">
                    <div class="pagination-controls">

                        <!-- Mobile -->
                        <div class="pagination-buttons mobile-only">
                            <button class="page-btn"
                                    @onclick="() => GoToPage(1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage - 1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">@_currentPage</button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage + 1)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_totalPages)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>

                        <!-- Web -->
                        <div class="pagination-buttons web-only">
                            <button class="page-btn"
                                    @onclick="() => GoToPage(1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage - 1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                <button class="page-btn @(_currentPage == i ? "active" : "")"
                                        @onclick="() => GoToPage(i)">
                                    @i
                                </button>
                            }

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage + 1)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_totalPages)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>

                    </div>
                </div>
            }
            else
            {
                <div class="col-12 p-4">
                    <NoResultsFound Message="No features found"
                                    IconClass="ti tabler-folder-off"
                                    SearchTerm="@_searchString" />
                </div>
            }

        </div>
    }

</div>

@if (showPopup && selectedFeature != null)
{
  <div class="modal-backdrop show" @onclick:stopPropagation="true"></div>
    <div class="modal show d-block" tabindex="-1" @onclick:stopPropagation="true">
        <div class="modal-dialog modal-dialog-top">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                 Features Details                       
                    </h5>
                    <button type="button" class="btn-close" @onclick="closeSelectFeatures"></button>
                </div>
                <div class="modal-body" style="padding: 24px;">
                    <p><b>Feature Name:</b> @selectedFeature.Name</p>
                    <p><b>Description:</b> @selectedFeature.Description</p>
                    <p><b>Route:</b> @selectedFeature.RouteUrl</p>
                </div>
            </div>
        </div>
    </div>
}

<FeatureFormDialog IsOpen="@_isDialogOpen" IsEditMode="@_isEditMode" IsSaving="@_isSaving" FormModel="@_featureModel" ParentFeatures="@_features" OnCancel="@CloseDialog" OnSubmit="@HandleSubmit" />
<FeatureDetailsOffcanvas IsOpen="@_isOffcanvasOpen" Feature="@_selectedFeature" OnClose="@CloseOffcanvas" />

@code {
    private List<FeatureDto> _features = new();
    private List<FeatureDto> _filteredFeatures = new();
    private List<FeatureDto> _pagedFeatures = new();
    private FeatureDto? _selectedFeature;
    private FeatureFormDialog.FeatureFormModel _featureModel = new();
    private bool _isLoading = true, _isSaving = false, _hasError = false, _isDialogOpen = false, _isOffcanvasOpen = false, _isEditMode = false;
    private string _errorMessage = string.Empty, _searchString = string.Empty, _sortColumn = "", _sortDirection = "";
    private int _currentPage = 1, _pageSize = 8, _totalItems = 0, _totalPages = 1; 
    private bool _canView, _canAdd, _canEdit, _canDelete;
    private bool _isDeleting = false;
    bool showPopup = false;
    FeatureDto? selectedFeature;
    private Random random = new Random();

    void closeSelectFeatures()
    {
        showPopup=false;
    }
    void ShowDetails(FeatureDto feature)  
    {
        selectedFeature = feature;
        showPopup = true;
    }
    void ClosePopup()
    {
        showPopup = false;
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);
        }
    }
    private string GenerateRandomColor()
    {
        return $"rgb({random.Next(256)}, {random.Next(256)}, {random.Next(256)})";
    }
    // pagination
    private (int start, int end) GetMobilePageRange()
    {
        int start = _currentPage;
        int end = _currentPage + 1;
        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }
        return (start, end);
    }
    private Dictionary<Guid, string> FeaturesColors = new();
    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true) { NavigationManager.NavigateTo("/login"); return; }
            var permissions = await PermissionService.GetPagePermissionsAsync("/feature");
            _canView = permissions.CanView; _canAdd = permissions.CanAdd; _canEdit = permissions.CanEdit; _canDelete = permissions.CanDelete;
            await LoadFeatures();
        }
        catch (Exception ex) { Logger.LogError(ex, "Error initializing Feature page"); _hasError = true; _errorMessage = $"Error initializing page: {ex.Message}"; _isLoading = false; }
    }

    private async Task LoadFeatures()
    {
        _isLoading = true; _hasError = false;
        try
        {
            var response = await RBACService.GetAllFeaturesAsync();
            if (response.Success && response.Data != null) { _features = response.Data; UpdateFilteredFeatures(); }
            else { _hasError = true; _errorMessage = response.Message ?? "Failed to load features"; }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error loading features"); _hasError = true; _errorMessage = $"Error loading features: {ex.Message}"; }
        finally { _isLoading = false; }
    }

    private void UpdateFilteredFeatures()
    {
        _filteredFeatures = string.IsNullOrWhiteSpace(_searchString) ? _features.ToList() : _features.Where(f => FilterFunc(f)).ToList();
        _filteredFeatures = (_sortColumn, _sortDirection) switch
        {
            ("code", "asc") => _filteredFeatures.OrderBy(f => f.Code).ToList(),
            ("code", "desc") => _filteredFeatures.OrderByDescending(f => f.Code).ToList(),
            ("name", "asc") => _filteredFeatures.OrderBy(f => f.Name).ToList(),
            ("name", "desc") => _filteredFeatures.OrderByDescending(f => f.Name).ToList(),
            ("description", "asc") => _filteredFeatures.OrderBy(f => f.Description ?? string.Empty).ToList(),
            ("description", "desc") => _filteredFeatures.OrderByDescending(f => f.Description ?? string.Empty).ToList(),
            ("routeurl", "asc") => _filteredFeatures.OrderBy(f => f.RouteUrl ?? string.Empty).ToList(),
            ("routeurl", "desc") => _filteredFeatures.OrderByDescending(f => f.RouteUrl ?? string.Empty).ToList(),
            _ => _filteredFeatures // Preserve original order from API (descending by date)
        };
        _totalItems = _filteredFeatures.Count; _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;
        if (_currentPage > _totalPages) _currentPage = _totalPages; if (_currentPage < 1) _currentPage = 1;
        _pagedFeatures = _filteredFeatures.Skip((_currentPage - 1) * _pageSize).Take(_pageSize).ToList();
        foreach (var dept in _pagedFeatures)
        {
            if (!FeaturesColors.ContainsKey(dept.Id))
            {
                FeaturesColors[dept.Id] = GenerateRandomColor();
            }
        }
    }

    private void OnSearchChanged(string value) { _searchString = value; _currentPage = 1; UpdateFilteredFeatures(); StateHasChanged(); }
    private void ClearSearch() { _searchString = string.Empty; _currentPage = 1; UpdateFilteredFeatures(); StateHasChanged(); }
    private void ToggleSort(string column) { if (_sortColumn == column) _sortDirection = _sortDirection == "asc" ? "desc" : "asc"; else { _sortColumn = column; _sortDirection = "asc"; } UpdateFilteredFeatures(); StateHasChanged(); }
    private bool FilterFunc(FeatureDto feature) => string.IsNullOrWhiteSpace(_searchString) || feature.Code.ToLower().Contains(_searchString.ToLower()) || feature.Name.ToLower().Contains(_searchString.ToLower()) || (feature.Description?.ToLower().Contains(_searchString.ToLower()) ?? false) || (feature.RouteUrl?.ToLower().Contains(_searchString.ToLower()) ?? false);
    private int GetGlobalSerialNumber(FeatureDto feature) => _filteredFeatures.IndexOf(feature) + 1;
    private string TruncateDescription(string? description) => string.IsNullOrEmpty(description) ? "-" : description.Length <= 50 ? description : description.Substring(0, 50) + "...";
    private int GetStartRecord() => _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    private int GetEndRecord() => Math.Min(_currentPage * _pageSize, _totalItems);
    private int GetStartPage() => Math.Max(1, _currentPage - 2);
    private int GetEndPage() => Math.Min(_totalPages, _currentPage + 2);
    private void GoToPage(int page) { if (page >= 1 && page <= _totalPages) { _currentPage = page; UpdateFilteredFeatures(); StateHasChanged(); } }
    async Task OpenAddDialog()
    {
     _selectedFeature = null; _isEditMode = false; _featureModel = new FeatureFormDialog.FeatureFormModel(); _isDialogOpen = true; await JS.InvokeVoidAsync("disableScroll");
     await JS.InvokeVoidAsync("focusInputById", "popupFirstInput");
    }

    async Task OpenEditDialog(FeatureDto feature)
    {
        await JS.InvokeVoidAsync("disableScroll");
        _selectedFeature = feature; _isEditMode = true; _featureModel = new FeatureFormDialog.FeatureFormModel { Code = feature.Code, Name = feature.Name, Description = feature.Description, RouteUrl = feature.RouteUrl, IsMainMenu = feature.IsMainMenu, ParentFeatureId = feature.ParentFeatureId, DisplayOrder = feature.DisplayOrder, Level = feature.Level, Icon = feature.Icon }; _isDialogOpen = true; }
    async Task OpenViewDialog(FeatureDto feature)
    {
        await JS.InvokeVoidAsync("disableScroll");

        _selectedFeature = feature; _isOffcanvasOpen = true; }
    async Task CloseDialog() { 
        await JS.InvokeVoidAsync("enableScroll");
        _isDialogOpen = false; _selectedFeature = null; _featureModel = new FeatureFormDialog.FeatureFormModel(); _isEditMode = false;
    }
    async Task CloseOffcanvas()
    {
        await JS.InvokeVoidAsync("enableScroll");
        _isOffcanvasOpen = false; _selectedFeature = null; }

    private async Task HandleSubmit(FeatureFormDialog.FeatureFormModel model)
    {
        _isSaving = true;
        try
        {
            if (_isEditMode && _selectedFeature != null)
            {
                var updateRequest = new UpdateFeatureRequest { Id = _selectedFeature.Id, Name = model.Name, Description = model.Description, RouteUrl = model.RouteUrl, IsMainMenu = model.IsMainMenu, ParentFeatureId = model.ParentFeatureId, DisplayOrder = model.DisplayOrder, Level = model.Level, Icon = model.Icon };
                var response = await RBACService.UpdateFeatureAsync(_selectedFeature.Id, updateRequest);

                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Feature updated successfully");
                    await LoadFeatures();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to update feature"));
                }
            }
                else
                {

                    var createRequest = new CreateFeatureRequest { Code = model.Code, Name = model.Name, Description = model.Description, RouteUrl = model.RouteUrl, IsMainMenu = model.IsMainMenu, ParentFeatureId = model.ParentFeatureId, DisplayOrder = model.DisplayOrder, Level = model.Level, Icon = model.Icon };

                    var response = await RBACService.CreateFeatureAsync(createRequest);

                    if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Feature created successfully"); await LoadFeatures(); CloseDialog(); }
                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to create feature"));
                }
            }
        catch (Exception ex) { Logger.LogError(ex, "Error saving feature"); await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}"); }
        finally
        {
            _isSaving = false; await JS.InvokeVoidAsync("enableScroll");
        }
    }

    private async Task DeleteFeature(FeatureDto feature)
    {
        _isDeleting = true;
        StateHasChanged();
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation", "Delete Feature", $"Are you sure you want to delete '{feature.Name}'? This action cannot be undone.");
            if (confirmed)
            {
                var response = await RBACService.DeleteFeatureAsync(feature.Id);
                if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Feature deleted successfully"); await LoadFeatures(); }
                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to delete feature"));
            }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error deleting feature"); await JS.InvokeVoidAsync("showToast", "error", $"Error deleting feature: {ex.Message}"); }
        finally { _isDeleting = false; StateHasChanged(); }
    }
}