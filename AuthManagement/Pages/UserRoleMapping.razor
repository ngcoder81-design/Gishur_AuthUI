@page "/userrolemapping"
@using AuthManagement.Models
@using AuthManagement.Helpers
@using AuthManagement.Services
@using AuthManagement.Shared
@inject RBACService RBACService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<UserRoleMapping> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]
@inject IJSRuntime JS
<script src="js/InputFocus.js"></script>

<PageTitle>User Role Mapping</PageTitle>

<div class="flex-grow-1">
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else{
    <div class="page-header">
            <h1 class="page-title">User Role Mapping</h1>
        <nav>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/" class="breadcrumb-link">
                        <i class="ti tabler-home"></i>Home
                    </a>
                    <span class="breadcrumb-separator">></span>
                </li>
                <li class="">
                        <span class="breadcrumb-current">User Role Mapping</span>
                </li>
            </ul>
        </nav>
    </div>
<div class="mapping-container">
    <!-- Toolbar -->
    <div class="toolbar-container">
        <div class="toolbar-left">
            <span class="mappings-list-label">Active Users Without Roles</span>
        </div>
        <div class="toolbar-right">
            <div class="search-box">
                <input type="text"
                       class="search-input"
                       placeholder="Search by email or name..."
                       value="@_searchString"
                       @oninput="@((ChangeEventArgs e) => OnSearchChanged(e.Value?.ToString() ?? string.Empty))" />
                @if (string.IsNullOrEmpty(_searchString))
                {
                    <i class="ti tabler-search search-icon"></i>
                }
            </div>
        </div>
    </div>

    <!-- Table -->
    @if (_isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 mb-0">Loading users without roles...</p>
        </div>
    }
    else if (_hasError)
    {
        <div class="error-container">
            <i class="ti tabler-alert-circle" style="font-size: 64px; color: #f44336;"></i>
            <h5 class="mt-3">Error Loading Data</h5>
            <p>@_errorMessage</p>
        </div>
    }
    else if (_pagedUsers != null && _pagedUsers.Any())
    {
        <table class="mapping-table" id="userRoleMap">
            <thead>
                <tr>
                            <th class="plusHeading"></th>
                    <th @onclick="@(() => ToggleSort("no"))" class="sortable">
                        #
                        <span class="sort-indicator">
                            <span class="sort-arrow up @(_sortColumn == "no" && _sortDirection == "asc" ? "active" : "")"></span>
                            <span class="sort-arrow down @(_sortColumn == "no" && _sortDirection == "desc" ? "active" : "")"></span>
                        </span>
                    </th>
                    <th @onclick="@(() => ToggleSort("email"))" class="sortable">
                        Email
                        <span class="sort-indicator">
                            <span class="sort-arrow up @(_sortColumn == "email" && _sortDirection == "asc" ? "active" : "")"></span>
                            <span class="sort-arrow down @(_sortColumn == "email" && _sortDirection == "desc" ? "active" : "")"></span>
                        </span>
                    </th>
                    <th @onclick="@(() => ToggleSort("name"))" class="sortable">
                        Full Name
                        <span class="sort-indicator">
                            <span class="sort-arrow up @(_sortColumn == "name" && _sortDirection == "asc" ? "active" : "")"></span>
                            <span class="sort-arrow down @(_sortColumn == "name" && _sortDirection == "desc" ? "active" : "")"></span>
                        </span>
                    </th>
                    <th @onclick="@(() => ToggleSort("username"))" class="sortable">
                        Username
                        <span class="sort-indicator">
                            <span class="sort-arrow up @(_sortColumn == "username" && _sortDirection == "asc" ? "active" : "")"></span>
                            <span class="sort-arrow down @(_sortColumn == "username" && _sortDirection == "desc" ? "active" : "")"></span>
                        </span>
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in _pagedUsers)
                {
                    <tr>

                                <td class="details-control" @onclick="@(() => ShowDetails(user))">
                                    <div class="plus" style="border-radius: 50%;
                                    display: flex;
                                    align-items: center;
                                    justify-content: center;
                                    box-sizing: content-box;
                                    border: 2px solid var(--bs-paper-bg);
                                    background-color: var(--bs-primary);
                                    block-size: .85rem;
                                    box-shadow: 0 0 3px var(--bs-gray-800);
                                    color: var(--bs-white);    width: 17px;
                        height: 17px;">
                                        <i class="ti tabler-plus"></i>
                                    </div>
                                </td>
                        <td class="serial-number">@GetGlobalSerialNumber(user)</td>
                        <td class="user-email">@user.Email</td>
                        <td class="user-name">@GetFullName(user)</td>
                        <td class="user-name">@(user.UserName ?? "-")</td>
                        <td>
                            <div class="action-buttons">
                                @if (_canCreate)
                                {
                                    <button class="action-btn btn-assign"
                                            title="Assign Role"
                                            @onclick="@(() => OpenAssignRoleDialog(user))"
                                            disabled="@_isSaving">
                                        <i class="ti tabler-user-plus"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

                <div class="pagination-container">
                    <div class="pagination-controls">

                        @* mobile  screen *@

                        @{
                            var range = GetMobilePageRange();
                        }

                        <div class="pagination-buttons mobile-only">

                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">
                                @_currentPage
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>

                        </div>

                        <div class="pagination-buttons web-Only">
                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                var pageNum = i;
                                <button class="page-btn @(_currentPage == pageNum ? "active" : "")"
                                        @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            }

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(_searchString))
        {
            <NoResultsFound Message="No users found matching your search" 
                           IconClass="ti tabler-user-search"
                           SearchTerm="@_searchString" />
        }
        else
        {
            <NoResultsFound Message="No users without roles. All active users have been assigned roles." 
                           IconClass="ti tabler-users-group"
                           SearchTerm="" />
        }
    }
</div>
}
</div>

@if (showPopup && _selectedUser != null)
{

    <div class="modal-backdrop show" @onclick:stopPropagation="true"></div>
    <div class="modal show d-block" tabindex="-1" @onclick:stopPropagation="true">
        <div class="modal-dialog modal-dialog-top">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Role Department Mapping
                    </h5>
                    <button type="button" class="btn-close" @onclick="closeSelectFeatures"></button>
                </div>
                <div class="modal-body" style="padding: 24px;">
                    <p><b>Email :</b> @_selectedUser.Email</p>
                    <p><b>Full Name :</b> @GetFullName(_selectedUser)</p>
                   
                </div>
            </div>
        </div>
    </div>
}
<UserRoleMappingFormDialog IsOpen="_isDialogOpen"
                           IsEditMode="false"
                           IsSaving="_isSaving"
                           FormModel="_mappingModel"
                           Departments="_departments"
                           Users="_usersForDialog"
                           Roles="_filteredRoles"
                           OnCancel="CloseDialog"
                           OnSubmit="HandleSubmit"
                           OnDepartmentChanged="OnDepartmentChanged" />

@code {
    private List<UserWithoutRoleDto> _usersWithoutRoles = new();
    private List<UserWithoutRoleDto> _filteredUsers = new();
    private List<UserWithoutRoleDto> _pagedUsers = new();
    private List<DepartmentDto> _departments = new();
    private List<UserDto> _usersForDialog = new();
    private List<RoleDto> _roles = new();
    private List<RoleDto> _filteredRoles = new();
    private UserWithoutRoleDto? _selectedUser;
    private MappingFormModel _mappingModel = new();
    private bool _isLoading = true;
    private bool _hasError = false;
    private string _errorMessage = string.Empty;
    private bool _isDialogOpen = false;
    private bool _isSaving = false;
    private bool _canView = false;
    private bool _canCreate = false;
    private bool _canEdit = false;
    private bool _canDelete = false;
    private string _searchString = string.Empty;
    private string _sortColumn = "email";
    private string _sortDirection = "asc";
    private int _currentPage = 1;
    private int _pageSize = 10;
    private int _totalItems = 0;
    private int _totalPages = 1;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
    }

    bool showPopup = false;
    void closeSelectFeatures()
    {
        showPopup=false;
    }

    void ShowDetails(UserWithoutRoleDto userWithoutRoleDto)
    {
        _selectedUser = userWithoutRoleDto;
        showPopup = true;
    }

    void ClosePopup()
    {
        showPopup = false;
    }
    // pagination
    private (int start, int end) GetMobilePageRange()
    {
        int start = _currentPage;
        int end = _currentPage + 1;

        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }

        return (start, end);
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                NavigationManager.NavigateTo("/login");
                return;
            }

            var permissions = await PermissionService.GetPagePermissionsAsync("/userrolemapping");
            _canView = permissions.CanView;
            _canCreate = permissions.CanAdd;
            _canEdit = permissions.CanEdit;
            _canDelete = permissions.CanDelete;

            Logger.LogInformation("Permissions set - View: {View}, Add: {Add}, Edit: {Edit}, Delete: {Delete}",
                _canView, _canCreate, _canEdit, _canDelete);

            await LoadData();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing UserRoleMapping page");
            _hasError = true;
            _errorMessage = $"Error initializing page: {ex.Message}";
            _isLoading = false;
        }
    }

    private async Task LoadData(bool useImmediateConsistency = false)
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            var usersWithoutRolesTask = useImmediateConsistency
                ? RBACService.GetUsersWithoutRolesImmediateAsync()
                : RBACService.GetUsersWithoutRolesAsync();

            var departmentsTask = RBACService.GetAllDepartmentsAsync();
            var rolesTask = RBACService.GetAllRolesAsync();

            await Task.WhenAll(usersWithoutRolesTask, departmentsTask, rolesTask);

            var usersResponse = await usersWithoutRolesTask;
            var departmentsResponse = await departmentsTask;
            var rolesResponse = await rolesTask;

            if (usersResponse.Success && usersResponse.Data != null)
            {
                _usersWithoutRoles = usersResponse.Data;
                Logger.LogInformation("Loaded {Count} users without roles", _usersWithoutRoles.Count);
            }
            else
            {
                _hasError = true;
                _errorMessage = usersResponse.Message ?? "Failed to load users without roles";
            }

            if (departmentsResponse.Success && departmentsResponse.Data != null)
            {
                _departments = departmentsResponse.Data;
            }

            if (rolesResponse.Success && rolesResponse.Data != null)
            {
                _roles = rolesResponse.Data;
            }

            UpdateFilteredUsers();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading data");
            _hasError = true;
            _errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void UpdateFilteredUsers()
    {
        // Filter
        if (string.IsNullOrWhiteSpace(_searchString))
        {
            _filteredUsers = _usersWithoutRoles.ToList();
        }
        else
        {
            _filteredUsers = _usersWithoutRoles
                .Where(u => FilterFunc(u))
                .ToList();
        }
        // Sort
        _filteredUsers = (_sortColumn, _sortDirection) switch
        {
            ("no", "asc") => _filteredUsers.OrderBy(u => _usersWithoutRoles.IndexOf(u)).ToList(),
            ("no", "desc") => _filteredUsers.OrderByDescending(u => _usersWithoutRoles.IndexOf(u)).ToList(),
            ("email", "asc") => _filteredUsers.OrderBy(u => u.Email).ToList(),
            ("email", "desc") => _filteredUsers.OrderByDescending(u => u.Email).ToList(),
            ("name", "asc") => _filteredUsers.OrderBy(u => GetFullName(u)).ToList(),
            ("name", "desc") => _filteredUsers.OrderByDescending(u => GetFullName(u)).ToList(),
            ("username", "asc") => _filteredUsers.OrderBy(u => u.UserName ?? string.Empty).ToList(),
            ("username", "desc") => _filteredUsers.OrderByDescending(u => u.UserName ?? string.Empty).ToList(),
            _ => _filteredUsers // Preserve original order from API (descending by date)
        };

        _totalItems = _filteredUsers.Count;
        _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;

        if (_currentPage > _totalPages)
        {
            _currentPage = _totalPages;
        }
        if (_currentPage < 1)
        {
            _currentPage = 1;
        }

        _pagedUsers = _filteredUsers
            .Skip((_currentPage - 1) * _pageSize)
            .Take(_pageSize)
            .ToList();
    }

    private void OnSearchChanged(string value)
    {
        _searchString = value;
        _currentPage = 1;
        UpdateFilteredUsers();
        StateHasChanged();
    }
    // Issue #3: Clear search method for X icon
    private void ClearSearch()
    {
        _searchString = string.Empty;
        _currentPage = 1;
        UpdateFilteredUsers();
        StateHasChanged();
    }

    private void ToggleSort(string column)
    {
        if (_sortColumn == column)
        {
            _sortDirection = _sortDirection == "asc" ? "desc" : "asc";
        }
        else
        {
            _sortColumn = column;
            _sortDirection = "asc";
        }
        UpdateFilteredUsers();
        StateHasChanged();
    }

    private bool FilterFunc(UserWithoutRoleDto user)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;

        var searchLower = _searchString.ToLower();
        return user.Email.ToLower().Contains(searchLower) ||
               (user.FirstName?.ToLower().Contains(searchLower) ?? false) ||
               (user.LastName?.ToLower().Contains(searchLower) ?? false) ||
               (user.UserName?.ToLower().Contains(searchLower) ?? false);
    }

    private string GetFullName(UserWithoutRoleDto user)
    {
        if (!string.IsNullOrEmpty(user.FirstName) && !string.IsNullOrEmpty(user.LastName))
            return $"{user.FirstName} {user.LastName}";
        if (!string.IsNullOrEmpty(user.FirstName))
            return user.FirstName;
        if (!string.IsNullOrEmpty(user.LastName))
            return user.LastName;
        return "-";
    }

    private int GetGlobalSerialNumber(UserWithoutRoleDto user)
    {
        var index = _filteredUsers.IndexOf(user);
        return index + 1;
    }

    private int GetStartRecord()
    {
        return _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    }

    private int GetEndRecord()
    {
        return Math.Min(_currentPage * _pageSize, _totalItems);
    }

    private int GetStartPage()
    {
        return Math.Max(1, _currentPage - 2);
    }

    private int GetEndPage()
    {
        return Math.Min(_totalPages, _currentPage + 2);
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= _totalPages)
        {
            _currentPage = page;
            UpdateFilteredUsers();
            StateHasChanged();
        }
    }

   async Task OpenAssignRoleDialog(UserWithoutRoleDto user)
    {
        _selectedUser = user;
        await JS.InvokeVoidAsync("focusInputById", "popupFirstInput");

        _mappingModel = new MappingFormModel
        {
            UserId = user.Id.ToString()
        };

        // Convert UserWithoutRoleDto to UserDto for the dialog
        _usersForDialog = new List<UserDto>
        {
            new UserDto
            {
                Id = user.Id,
                Email = user.Email,
                UserName = user.UserName,
                FirstName = user.FirstName,
                LastName = user.LastName,
                IsActive = user.IsActive
            }
        };

        _filteredRoles = new List<RoleDto>();
        _isDialogOpen = true;
    }

    private void CloseDialog()
    {
        _isDialogOpen = false;
        _selectedUser = null;
        _mappingModel = new MappingFormModel();
        _usersForDialog = new List<UserDto>();
        _filteredRoles = new List<RoleDto>();
    }

    private void OnDepartmentChanged(string departmentId)
    {
        if (!string.IsNullOrEmpty(departmentId))
        {
            var deptId = Guid.Parse(departmentId);
            // Include both department-specific roles AND system roles (DepartmentId == null)
            _filteredRoles = _roles
                .Where(r => r.DepartmentId == deptId || r.DepartmentId == null)
                .ToList();
        }
        else
        {
            _filteredRoles = new List<RoleDto>();
        }

        // Reset role selection when department changes
        _mappingModel.RoleId = string.Empty;
        StateHasChanged();
    }

    private async Task HandleSubmit(MappingFormModel model)
    {
        _isSaving = true;
        try
        {
            var userId = Guid.Parse(model.UserId);
            var roleId = Guid.Parse(model.RoleId);
            var departmentId = Guid.Parse(model.DepartmentId);

            // Get current user email for AssignedByEmail
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var currentUserEmail = authState.User.Identity?.Name ?? "";

            var createRequest = new CreateUserRoleMappingRequest
            {
                UserId = userId,
                RoleId = roleId,
                DepartmentId = departmentId,
                AssignedByEmail = currentUserEmail
            };

            var response = await RBACService.CreateUserRoleMappingAsync(createRequest);
            if (response.Success)
            {
                await JS.InvokeVoidAsync("showToast", "success", "User role assigned successfully");
                CloseDialog();

                // Reload data with immediate consistency to get updated list from Command DB
                await LoadData(useImmediateConsistency: true);
                StateHasChanged();
            }
            else
            {
                await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to assign user role"));
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error assigning user role");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}");
        }
        finally
        {
            _isSaving = false;
        }
    }
}