@page "/company/create"
@page "/company/edit/{Id:guid}"
@using AuthManagement.Models
@using AuthManagement.Services
@inject CompanyService CompanyService
@inject NavigationManager NavigationManager
@inject ILogger<CompanyForm> Logger
@inject ISnackbar Snackbar
@inject IJSRuntime JS
@attribute [Authorize]

<PageTitle>@(_isEditMode ? "Edit Company" : "Create Company")</PageTitle>
@if (_isLoading)
{
    <LoadingSpinner FullPage="true" />

}
else
{
    <div class="page-header">
      
        <div class="page-title-section">
            <h1 class="page-title">
                <a href="/company">
                    <span style="
                font-size: 20px;
            border-radius: 6px;
            color: #7367ef;">
                        <i class="bi bi-arrow-left-short"></i>
                    </span>
                </a>
                @(_isEditMode ? "Edit Company" : "Add New Company")</h1>
            <nav class="breadcrumb-nav">
                <span class="breadcrumb-link" @onclick='() => NavigationManager.NavigateTo("/")'>
                    <i class="bi bi-house-door"></i> Home
                </span>
                <span class="breadcrumb-separator">></span>
                <span class="breadcrumb-link" @onclick="NavigateBack">Companies</span>
                <span class="breadcrumb-separator">></span>
                <span style="color: #333;" id="EditBreadcrumb">@(_isEditMode ? "Edit Company" : "Add New Company")</span>
            </nav>
        </div>
    </div>

    <div class="page-content">
        <div class="wizard-wrapper">
            <CompanyWizard 
                IsOpen="true"
                IsEditMode="_isEditMode"
                CompanyToEdit="_companyToEdit"
                OnClose="HandleClose"
                OnSave="HandleSave" />
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid? Id { get; set; }

    private bool _isEditMode => Id.HasValue;
    private CompanyDto? _companyToEdit;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        if (_isEditMode && Id.HasValue)
        {
            await LoadCompany();
        }
        else
        {
            _isLoading = false;
        }
    }

    private async Task LoadCompany()
    {
        try
        {
            _isLoading = true;
            Logger.LogInformation($"[CompanyForm] Loading company {Id!.Value} for edit");
            
            var response = await CompanyService.GetCompanyAsync(Id!.Value);
            if (response.Success && response.Data != null)
            {
                _companyToEdit = response.Data;
                Logger.LogInformation($"[CompanyForm] Loaded company: {response.Data.LegalName}");
                Logger.LogInformation($"[CompanyForm] BooksStartDate: {response.Data.BooksStartDate:yyyy-MM-dd}");
                Logger.LogInformation($"[CompanyForm] Status: {response.Data.Status}");
                Logger.LogInformation($"[CompanyForm] StateId: {response.Data.StateId}");
                Logger.LogInformation($"[CompanyForm] CityId: {response.Data.CityId}");
            }
            else
            {
                Snackbar.Add(response.Message ?? "Failed to load company", Severity.Error);
                NavigateBack();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading company");
            Snackbar.Add("An error occurred while loading company", Severity.Error);
            NavigateBack();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void HandleClose()
    {
        NavigateBack();
    }

    private void HandleSave()
    {
        NavigateBack();
    }

    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/company");
    }
}