@page "/company"
@using AuthManagement.Models
@using AuthManagement.Services
@using AuthManagement.Shared
@using System.Text.Json
@inject CompanyService CompanyService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<Company> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]
@inject IJSRuntime JS
<link rel="stylesheet" href="css/Company.css" />

<PageTitle>Company Management</PageTitle>
<style>
    .toolbar-container{
        padding: 14px 13px;
    }
</style>

<div class="flex-grow-1">
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else if (_hasError)
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled">
            @_errorMessage
        </MudAlert>
    }
    else
    {
        <div class="page-header">
            <h1 class="page-title">Company List</h1>
            <nav>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#" class="breadcrumb-link">
                            <i class="ti tabler-home"></i>Home
                        </a>
                        <span class="breadcrumb-separator">></span>
                    </li>
                    <li>
                        <span class="breadcrumb-current">Company List</span>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="company-container">
            <div class="toolbar-container">
                <div class="toolbar-left">
                    <span class="list-label">COMPANY LIST</span>
                </div>

                <div class="toolbar-right">
                    <div class="search-box">
                        <input type="text"
                               class="search-input"
                               placeholder="Search by Code, Name, or Country"
                               value="@_searchString"
                               @oninput="@((ChangeEventArgs e) => OnSearchChanged(e.Value?.ToString() ?? string.Empty))" />
                        @if (string.IsNullOrEmpty(_searchString))
                        {
                            <i class="ti tabler-search search-icon"></i>
                        }
                    </div>
                    @if (_canAdd)
                    {
                        <button class="add-button" @onclick="OpenAddDialog" disabled="@_isSaving">
                            <i class="ti tabler-plus"></i>
                            <span>Add Company</span>
                        </button>
                    }
                </div>
            </div>
            <div class="card-body" style="margin-bottom: 28px; padding-top: 28px; padding-left: 22px; padding-right: 22px;">
                @if (_pagedCompanies.Any())
                {
                    <div class="grid">

                        @foreach (var company in _pagedCompanies)
                        {
                            string borderColor = GenerateRandomColor();
                            string avatarBg = GenerateAvatarColor(company.CompanyCode);

                            <div class="grid-box">
                                <div class="card project-style-card" style="border-top:5px solid @borderColor">
    <div class="project-header d-flex justify-content-between align-items-start">
        <div class="d-flex align-items-center gap-2">
            <div class="project-icon" style="background:@borderColor">
                @GetInitials(company.LegalName)
            </div>
            <div>
                <h6 class="project-title" title="@company.LegalName">
                    @TruncateText(company.LegalName, 28)
                </h6>
                <small class="text-muted">
                    Code : @company.CompanyCode
                </small>
            </div>
        </div>
        <!-- 3 DOT MENU -->
        <div class="dropdown">
            <button class="icon-btn" data-bs-toggle="dropdown">
                <i class="ti tabler-dots-vertical"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" @onclick="@(() => OpenViewDialog(company))">
                        <i class="ti tabler-eye me-2"></i> View
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" @onclick="@(() => OpenEditDialog(company))">
                        <i class="ti tabler-edit me-2"></i> Edit
                    </a>
                </li>
                <li>
                    <a class="dropdown-item text-danger"
                       @onclick="@(() => ConfirmDelete(company))">
                        <i class="ti tabler-trash me-2"></i> Delete
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- TAGS -->
    <div class="project-tags mt-3">
                                        <span class="tag"><i class="bi bi-buildings-fill"></i>&nbsp;@company.LegalStructureName</span>
                                        <span class="tag">
                                            <i class="bi bi-geo-alt-fill"></i>
                                            &nbsp;@company.BaseCurrencyCode
                                        </span>
                                        <span class="tag"><i class="bi bi-globe-central-south-asia"></i>&nbsp;@company.AddressCountryName</span>
    </div>
    <!-- DESCRIPTION -->
                                    <div class="project-desc mt-3">

                                        <div class="d-flex align-items-center gap-2">
                                            <span style="color:black;font-size:17px;font-weight:500;">Id:</span>
                                            <span style="font-size:15px;color:black;">
                                                @company.Id.ToString().Substring(Math.Max(0, company.Id.ToString().Length - 6))
                                            </span>
                                        </div>

                                        <div class="d-flex align-items-center gap-2">
                                            <span style="color:black;font-size:17px;font-weight:500;">Email:</span>
                                            <span style="font-size:15px;color:black;">
                                                @(string.IsNullOrWhiteSpace(company.PrimaryEmail)
                                                                                    ? "Not available"
                                                                                    : company.PrimaryEmail)
                                            </span>
                                        </div>

                                        <div class="d-flex align-items-center gap-2">
                                            <span style="color:black;font-size:17px;font-weight:500;">Phone Number:</span>
                                            <span style="font-size:15px;color:black;">
                                                @(string.IsNullOrWhiteSpace(company.PrimaryPhone)
                                                                                    ? "Not available"
                                                                                    : company.PrimaryPhone)
                                            </span>
                                        </div>

                                        <div class="align-items-center gap-2 mt-1">
                                            <span style="color:black;font-size:17px;font-weight:500;">Status:</span>&nbsp;
                                            <span class="status-badge @GetStatusClass(company.Status)">
                                                @company.StatusName
                                            </span>
                                        </div>

                                    </div>

    <!-- FOOTER -->
    <div class="project-footer mt-4 d-flex justify-content-between">
        <div>
            <small class="text-muted">Create Date</small>
            <div class="fw-semibold">
               @company.CreatedAt.ToString("dd, MMM yyyy")

            </div>
        </div>

        <div>
            <small class="text-muted">Update Date</small>
            <div class="fw-semibold">
           @company.UpdatedAt?.ToString("dd,MMM yyyy")

            </div>
        </div>
    </div>
</div>
                            
                            </div>
                        }
                   
                  
                </div>
                }
                else
                {
                <div class="col-12">
                    <div class="no-data">
                        <i class="ti tabler-building-factory-2"></i>
                        <p>No companies found</p>
                    </div>
                </div>
                }
            </div>
            <!-- Pagination -->
            @if (_totalItems > 0)
            {
                <div class="pagination-container">
                    <div class="pagination-controls">
                        @* mobile  screen *@
                        @{
                            var range = GetMobilePageRange();
                        }
                        <div class="pagination-buttons mobile-only">

                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">
                                @_currentPage
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>

                        </div>

                        <div class="pagination-buttons web-Only">
                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                var pageNum = i;
                                <button class="page-btn @(_currentPage == pageNum ? "active" : "")"
                                        @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            }

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<CompanyDto> _companies = [];
    private List<CompanyDto> _filteredCompanies = [];
    private List<CompanyDto> _pagedCompanies = [];
    private bool _isLoading = true;
    private bool _hasError;
    private string _errorMessage = string.Empty;
    private bool _isSaving = false;
    private bool _isDeleting;
    private bool _canView;
    private bool _canAdd;
    private bool _canEdit;
    private bool _canDelete;
    private string _searchString = string.Empty;
    private int _currentPage = 1;
    private int _pageSize = 10;
    private int _totalItems;
    private int _totalPages = 1;
    private static readonly Random _random = new();
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);
        }
    }
    private Random random = new Random();
    private string GenerateRandomColor()
    {
        return $"rgb({random.Next(256)}, {random.Next(256)}, {random.Next(256)})";
    }
    private (int start, int end) GetMobilePageRange()
    {
        int start = _currentPage;
        int end = _currentPage + 1;
        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }
        return (start, end);
    }
    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("Company page initializing...");

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                Logger.LogWarning("User not authenticated, redirecting to login");
                NavigationManager.NavigateTo("/login");
                return;
            }
            var permissions = await PermissionService.GetPagePermissionsAsync("/company");
            _canView = permissions.CanView;
            _canAdd = permissions.CanAdd;
            _canEdit = permissions.CanEdit;
            _canDelete = permissions.CanDelete;
            Logger.LogInformation("Permissions - View: {View}, Add: {Add}, Edit: {Edit}, Delete: {Delete}",
                _canView, _canAdd, _canEdit, _canDelete);
            await LoadCompanies();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing Company page");
            _hasError = true;
            _errorMessage = $"Error initializing page: {ex.Message}";
            _isLoading = false;
        }
    }
    private async Task LoadCompanies()
    {
        _isLoading = true;
        _hasError = false;
        try
        {
            Logger.LogInformation("Loading companies...");
            var response = await CompanyService.GetAllCompaniesAsync();
            if (response.Success && response.Data != null)
            {
                _companies = response.Data;
                Logger.LogInformation("Loaded {Count} companies", _companies.Count);
                UpdateFilteredCompanies();
            }
            else
            {
                _hasError = true;
                _errorMessage = response.Message ?? "Failed to load companies";
                Logger.LogWarning("Failed to load companies: {Message}", _errorMessage);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading companies");
            _hasError = true;
            _errorMessage = $"Error loading companies: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }
    private void UpdateFilteredCompanies()
    {
        if (string.IsNullOrWhiteSpace(_searchString))
        {
            _filteredCompanies = _companies.ToList();
        }
        else
        {
            var search = _searchString.ToLower();
            _filteredCompanies = _companies
                .Where(c => c.CompanyCode.ToLower().Contains(search) ||
                           c.LegalName.ToLower().Contains(search) ||
                           (c.AddressCountryName?.ToLower().Contains(search) ?? false))
                .ToList();
        }
        _totalItems = _filteredCompanies.Count;
        _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;

        if (_currentPage > _totalPages) _currentPage = _totalPages;
        if (_currentPage < 1) _currentPage = 1;

        _pagedCompanies = _filteredCompanies
            .Skip((_currentPage - 1) * _pageSize)
            .Take(_pageSize)
            .ToList();
    }
    private void OnSearchChanged(string value)
    {
        _searchString = value;
        _currentPage = 1;
        UpdateFilteredCompanies();
        StateHasChanged();
    }
    private void GoToPage(int page)
    {
        if (page >= 1 && page <= _totalPages)
        {
            _currentPage = page;
            UpdateFilteredCompanies();
            StateHasChanged();
        }
    }
    private int GetStartRecord() => _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    private int GetEndRecord() => Math.Min(_currentPage * _pageSize, _totalItems);
    private int GetStartPage() => Math.Max(1, _currentPage - 2);
    private int GetEndPage() => Math.Min(_totalPages, _currentPage + 2);
    private void OpenAddDialog()
    {
        NavigationManager.NavigateTo("/company/create");
    }
    private void OpenEditDialog(CompanyDto company)
    {
        NavigationManager.NavigateTo($"/company/edit/{company.Id}");
    }
    private void OpenViewDialog(CompanyDto company)
    {
        NavigationManager.NavigateTo($"/company/view/{company.Id}");
    }
    private async Task ConfirmDelete(CompanyDto company)
    {
        var result = await JS.InvokeAsync<JsonElement>("Swal.fire", new
        {
            title = "Delete Company?",
            text = $"Are you sure you want to delete '{company.LegalName}'? This action cannot be undone.",
            icon = "warning",
            showCancelButton = true,
            reverseButtons = true,
            cancelButtonText = "Cancel",
            confirmButtonText = "Yes, delete",
            confirmButtonColor = "#dc3545",
            cancelButtonColor = "#f8f9fa",
            customClass = new
            {
                confirmButton = "btn btn-danger ms-2",
                cancelButton = "btn btn-label-secondary"
            },
            buttonsStyling = false 
        });
        bool confirmed =
            result.TryGetProperty("isConfirmed", out var isConfirmedProp)
            && isConfirmedProp.GetBoolean();
        if (confirmed)
        {
            await DeleteCompany(company);
        }
    }
    private async Task DeleteCompany(CompanyDto company)
    {
        _isDeleting = true;
        StateHasChanged();
        try
        {
            var response = await CompanyService.DeleteCompanyAsync(company.Id);
            if (response.Success)
            {
                await JS.InvokeVoidAsync("Swal.fire", new
                {
                    title = "Deleted!",
                    text = "Company has been deleted successfully.",
                    icon = "success",
                    timer = 2000,
                    showConfirmButton = false
                });
                await LoadCompanies();
            }
            else
            {
                await JS.InvokeVoidAsync("Swal.fire", new
                {
                    title = "Error",
                    text = response.Message ?? "Failed to delete company",
                    icon = "error"
                });
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting company");
            await JS.InvokeVoidAsync("Swal.fire", new
            {
                title = "Error",
                text = $"Error deleting company: {ex.Message}",
                icon = "error"
            });
        }
        finally
        {
            _isDeleting = false;
            StateHasChanged();
        }
    }
    private async Task OnCompanySaved()
    {
        await LoadCompanies();
        StateHasChanged();
    }
    private string GetStatusColor(CompanyStatus status) => status switch
    {
        CompanyStatus.Draft => "#ffc107",
        CompanyStatus.Active => "#28a745",
        CompanyStatus.Inactive => "#dc3545",
        _ => "#6c757d"
    };
    private string GetStatusClass(CompanyStatus status) => status switch
    {
        CompanyStatus.Draft => "status-draft",
        CompanyStatus.Active => "status-active",
        CompanyStatus.Inactive => "status-inactive",
        _ => ""
    };
    private string GenerateAvatarColor(string code)
    {
        var hash = code.GetHashCode();
        var colors = new[] { "#7c3aed", "#2196f3", "#4caf50", "#ff9800", "#e91e63", "#00bcd4", "#9c27b0", "#607d8b" };
        return colors[Math.Abs(hash) % colors.Length];
    }
    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name.Length >= 2 ? name[..2].ToUpper() : name.ToUpper();
    }
    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text[..maxLength] + "...";
    }
}