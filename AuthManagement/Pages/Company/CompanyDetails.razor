                            <span class="info-value">@GetMonthName(_company.FiscalYearStartMonth)</span>
                        </div>
                        @if (_company.BooksStartDate.HasValue)
                        {
                            <div class="info-item">
                                <span class="info-label">Books Start Date</span>
                                <span class="info-value">@_company.BooksStartDate.Value.ToString("dd MMM yyyy")</span>
                            </div>
