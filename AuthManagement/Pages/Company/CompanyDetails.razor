                                        <i class="bi bi-geo-alt-fill" ></i>
                                        @(string.Join(", ", new[] { _company.CityName, _company.StateName, _company.CountryName }.Where(x => !string.IsNullOrEmpty(x))))
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(_company.BaseCurrencyCode))
                                {
                                    <div class="meta-item">
                                        <i class="bi bi-currency-exchange"></i>
                                        @_company.BaseCurrencyCode - @_company.BaseCurrencyName
                                    </div>
                                }
                                @if (_company.IncorporationDate.HasValue)
                                {
                                    <div class="meta-item">
                                        <i class="bi bi-calendar2-month-fill"></i>
                                        Est. @_company.IncorporationDate.Value.Year
                                    </div>
                                }
                                <div class="meta-item">
                                    <i class="bi bi-briefcase-fill"></i>
                                    @_company.LegalStructureName
                                </div>
                            </div>
                            <div class="profile-badges">
                                <span class="badge @GetStatusClass(_company.Status)">@_company.StatusName</span>
                                @if (_company.EnableMultiCurrency)
                                {
                                    <span class="badge badge-multi-currency">Multi-Currency</span>
                                }
                                @if (_company.LockBackDatedPosting)
                                {
                                    <span class="badge badge-feature">Back-Date Locked</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="profile-actions">
                        <button class="btn-edit" @onclick="EditCompany">
                            <i class="ti tabler-edit"></i>
                            Edit Company
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-layout">
            <div class="main-content">
                <div class="section-card">
                    <div class="section-header">
                        <div class="section-icon purple">
                            <i class="ti tabler-building-skyscraper"></i>
                        </div>
