                            <i class="ti tabler-report-money"></i>
                        </div>
                        <h3 class="section-title">Financial Settings</h3>
                    </div>
                    <div class="info-grid">
                        <div class="info-item">
                            <span class="info-label">Base Currency</span>
                            <span class="info-value">@_company.BaseCurrencyName (@_company.BaseCurrencyCode)</span>
                        </div>
                        @if (_company.ReportingCurrencyId.HasValue)
                        {
                            <div class="info-item">
                                <span class="info-label">Reporting Currency</span>
                                <span class="info-value">@_company.ReportingCurrencyName (@_company.ReportingCurrencyCode)</span>
                            </div>
