@page "/permission"
@using AuthManagement.Models
@using AuthManagement.Helpers
@using AuthManagement.Services
@using AuthManagement.Shared
@inject RBACService RBACService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<Permission> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]
@inject IJSRuntime JS

<PageTitle>Permission Management</PageTitle>
<script src="js/InputFocus.js"></script>

<style>
    .permission-table tbody tr {
        transition: box-shadow 0.3s ease;
    }
        .permission-table tbody tr td:first-child {
            position: relative;
        }
   .permission-table tbody tr td:first-child::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 5px;
                height: 100%;
                background: linear-gradient(to bottom, #26bf9491 50%, #97959e8a 50%);
                opacity: 0;
                transition: opacity 0.3s ease;
            }
        .permission-table tbody tr:hover {
            box-shadow: inset 5px 0 0 #47cfc4, rgba(0, 0, 0, 0.15) 0px 15px 25px;
        }
  .permission-table tbody tr:hover td:first-child::before {
                opacity: 1;
    }
 .permission-container {
     background: white;
     border-radius: 8px;
     overflow: hidden;
        padding-left: 21px;
        padding-bottom: 21px;
        padding-right: 21px;
 }
 .permissions-list-label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding-left: 7px;
 }
 .toolbar-right {
     display: flex;
     align-items: center;
     gap: 12px;
     margin-left: auto;
 }
 .permission-table {
     width: 100%;
     border-collapse: collapse;
        border: 1px solid #80808054;
 }

 .permission-table thead {
     background-color: #fafafa;
 }

 .permission-table th {
            padding: 7px 16px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #6d6d6d54;
            cursor: pointer;
            user-select: none;
            color: black;
            background: white;
 }

 .permission-table th:last-child {
     border-right: none;
 }

 .permission-table th.text-center {
     text-align: center;
 }

 .permission-table tbody tr {
     transition: background-color 0.2s;
            border-bottom: 1px solid #6d6d6d54;
 }

 .permission-table td {
            padding: 13px 16px;
            font-size: 14px;
            color: #333;
 }

 .permission-table tbody tr:last-child {
     border-bottom: none;
 }

 .serial-number {
     color: #666;
     font-weight: 500;
 }

 .permission-name {
     color: #333;
     font-weight: 600;
 }

 .description-text {
     color: #666;
 }
        .permission-table td.permission-name {
            max-width: 250px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .permission-table td.description-text {
            max-width: 350px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
</style>

<div class=" flex-grow-1">
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else{
     <div class="page-header">
        <h1 class="page-title">Permission Management</h1>
        <nav>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#" class="breadcrumb-link">
                        <i class="ti tabler-home"></i>Home
                    </a>
                    <span class="breadcrumb-separator">></span>
                </li>
                <li class="">
                    <span class="breadcrumb-current">Permissions</span>
                </li>
            </ul>
        </nav>
    </div>


    <div class="permission-container">
        <div class="toolbar-container">
            <div class="toolbar-left">
                <span class="permissions-list-label">Permissions List</span>
            </div>
            <div class="toolbar-right">
                <div class="search-box">
                    <input type="text" class="search-input" placeholder="Search permissions..."
                           value="@_searchString"
                           @oninput="@((ChangeEventArgs e) => OnSearchChanged(e.Value?.ToString() ?? string.Empty))" />
                    @if (string.IsNullOrEmpty(_searchString))
                    {
                        <i class="ti tabler-search search-icon"></i>
                    }
                </div>
                @if (_canAdd)
                {
                    <button class="add-button" @onclick="OpenAddDialog" disabled="@_isSaving">
                        <i class="ti tabler-plus"></i><span>Add Permission</span>
                    </button>
                }
            </div>
        </div>

        @if (_isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
                <p class="mt-2">Loading permissions...</p>
            </div>
        }
        else if (_hasError)
        {
            <div class="alert alert-danger m-3" role="alert"><i class="ti tabler-alert-circle me-2"></i>@_errorMessage</div>
        }
        else if (_pagedPermissions != null && _pagedPermissions.Any())
        {
            <table class="permission-table">
                <thead>
                    <tr>
                            <th class="plusHeading"></th>

                        <th style="width: 80px;">#</th>
                        <th @onclick="@(() => ToggleSort("code"))">Code</th>
                        <th @onclick="@(() => ToggleSort("name"))">Permission Name</th>
                        <th @onclick="@(() => ToggleSort("description"))">Description</th>
                        <th class="text-center" style="width: 100px;">Status</th>
                        <th class="text-center" style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var permission in _pagedPermissions)
                    {
                        <tr>
                                <td class="details-control" @onclick="@(() => ShowDetails(permission))">
                                    <div class="plus" style="border-radius: 50%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        box-sizing: content-box;
                        border: 2px solid var(--bs-paper-bg);
                        background-color: var(--bs-primary);
                        block-size: .85rem;
                        box-shadow: 0 0 3px var(--bs-gray-800);
                        color: var(--bs-white);    width: 17px;
            height: 17px;">
                                        <i class="ti tabler-plus"></i>
                                    </div>
                                </td>

                            <td class="serial-number">@GetGlobalSerialNumber(permission)</td>
                            <td class="permission-code" style="font-weight:600;color:#666;">@permission.Code</td>
                            <td class="permission-name" title="@permission.Name">@permission.Name</td>
                            <td class="description-text" title="@permission.Description">@permission.Description</td>
                            <td class="text-center">
                                    <span class="badge @(permission.IsActive ? "bg-purple-gradient" : "bg-orange-gradient")">
                                    @(permission.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    @if (_canView)
                                    {
                                        <button class="action-btn view-btn" @onclick="@(() => OpenViewDialog(permission))" title="View"><i class="ti tabler-eye"></i></button>
                                    }
                                    @if (_canEdit)
                                    {
                                        <button class="action-btn edit-btn" @onclick="@(() => OpenEditDialog(permission))" title="Edit"><i class="ti tabler-edit"></i></button>
                                    }
                                    @if (_canDelete)
                                    {
                                        <button class="action-btn delete-btn" @onclick="@(() => DeletePermission(permission))" title="Delete"><i class="ti tabler-trash"></i></button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

                <div class="pagination-container">
                    <div class="pagination-controls">
                        @* mobile  screen *@
                        @{
                            var range = GetMobilePageRange();
                        }

                        <div class="pagination-buttons mobile-only">

                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">
                                @_currentPage
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                        <div class="pagination-buttons web-Only">
                            <button class="page-btn" @onclick="() => GoToPage(1)" disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                var pageNum = i;
                                <button class="page-btn @(_currentPage == pageNum ? "active" : "")"
                                        @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            }

                            <button class="page-btn" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>
                            <button class="page-btn" @onclick="() => GoToPage(_totalPages)" disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
        }
        else
        {
            <NoResultsFound Message="No permissions found" 
                           IconClass="ti tabler-lock-off"
                           SearchTerm="@_searchString" />
        }
    </div>
    }
</div>

<PermissionFormDialog IsOpen="@_isDialogOpen" IsEditMode="@_isEditMode" IsSaving="@_isSaving" FormModel="@_permissionModel" OnCancel="@CloseDialog" OnSubmit="@HandleSubmit" />
<PermissionDetailsOffcanvas IsOpen="@_isOffcanvasOpen" Permission="@_selectedPermission" OnClose="@CloseOffcanvas" />

@if (showPopup && selectedFeature != null)
{
    <div class="modal-backdrop show" @onclick:stopPropagation="true"></div>
    <div class="modal show d-block" tabindex="-1" @onclick:stopPropagation="true">
        <div class="modal-dialog modal-dialog-top">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                      Permission Details                       
                    </h5>
                    <button type="button" class="btn-close" @onclick="closeSelectFeatures"></button>
                </div>
                <div class="modal-body" style="padding: 24px;">
                    <p><b>Permission Name:</b> @selectedFeature.Name</p>
                    <p><b>Description:</b> @selectedFeature.Description</p>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<PermissionDto> _permissions = new();
    private List<PermissionDto> _filteredPermissions = new();
    private List<PermissionDto> _pagedPermissions = new();
    private PermissionDto? _selectedPermission;
    private PermissionFormDialog.PermissionFormModel _permissionModel = new();
    private bool _isLoading = true, _isSaving = false, _hasError = false, _isDialogOpen = false, _isOffcanvasOpen = false, _isEditMode = false;
    private string _errorMessage = string.Empty, _searchString = string.Empty, _sortColumn = "", _sortDirection = "";
    private int _currentPage = 1, _pageSize = 10, _totalItems = 0, _totalPages = 1;
    private bool _canView, _canAdd, _canEdit, _canDelete;
    bool showPopup = false;
    PermissionDto? selectedFeature;

 void closeSelectFeatures()
 {
     showPopup=false;
 }

    void ShowDetails(PermissionDto feature)
 {
     selectedFeature = feature;
     showPopup = true;
 }

 void ClosePopup()
 {
     showPopup = false;
 }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
    }
    // pagination
    private (int start, int end) GetMobilePageRange()
    {
        int start = _currentPage;
        int end = _currentPage + 1;

        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }
        return (start, end);
    }
    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true) { NavigationManager.NavigateTo("/login"); return; }
            var permissions = await PermissionService.GetPagePermissionsAsync("/permission");
            _canView = permissions.CanView; _canAdd = permissions.CanAdd; _canEdit = permissions.CanEdit; _canDelete = permissions.CanDelete;
            await LoadPermissions();
        }
        catch (Exception ex) { Logger.LogError(ex, "Error initializing Permission page"); _hasError = true; _errorMessage = $"Error initializing page: {ex.Message}"; _isLoading = false; }
    }

    private async Task LoadPermissions()
    {
        _isLoading = true; _hasError = false;
        try
        {
            var response = await RBACService.GetAllPermissionsAsync();
            if (response.Success && response.Data != null) { _permissions = response.Data; UpdateFilteredPermissions(); }
            else { _hasError = true; _errorMessage = response.Message ?? "Failed to load permissions"; }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error loading permissions"); _hasError = true; _errorMessage = $"Error loading permissions: {ex.Message}"; }
        finally { _isLoading = false; }
    }

    private void UpdateFilteredPermissions()
    {
        _filteredPermissions = string.IsNullOrWhiteSpace(_searchString) ? _permissions.ToList() : _permissions.Where(p => FilterFunc(p)).ToList();
        _filteredPermissions = (_sortColumn, _sortDirection) switch
        {
            ("code", "asc") => _filteredPermissions.OrderBy(p => p.Code).ToList(),
            ("code", "desc") => _filteredPermissions.OrderByDescending(p => p.Code).ToList(),
            ("name", "asc") => _filteredPermissions.OrderBy(p => p.Name).ToList(),
            ("name", "desc") => _filteredPermissions.OrderByDescending(p => p.Name).ToList(),
            ("description", "asc") => _filteredPermissions.OrderBy(p => p.Description ?? string.Empty).ToList(),
            ("description", "desc") => _filteredPermissions.OrderByDescending(p => p.Description ?? string.Empty).ToList(),
            _ => _filteredPermissions // Preserve original order from API (descending by date)
        };
        _totalItems = _filteredPermissions.Count; _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;
        if (_currentPage > _totalPages) _currentPage = _totalPages; if (_currentPage < 1) _currentPage = 1;
        _pagedPermissions = _filteredPermissions.Skip((_currentPage - 1) * _pageSize).Take(_pageSize).ToList();
    }
    private void OnSearchChanged(string value) { _searchString = value; _currentPage = 1; UpdateFilteredPermissions(); StateHasChanged(); }
    private void ClearSearch() { _searchString = string.Empty; _currentPage = 1; UpdateFilteredPermissions(); StateHasChanged(); }
    private void ToggleSort(string column) { if (_sortColumn == column) _sortDirection = _sortDirection == "asc" ? "desc" : "asc"; else { _sortColumn = column; _sortDirection = "asc"; } UpdateFilteredPermissions(); StateHasChanged(); }
    private bool FilterFunc(PermissionDto permission) => string.IsNullOrWhiteSpace(_searchString) || permission.Code.ToLower().Contains(_searchString.ToLower()) || permission.Name.ToLower().Contains(_searchString.ToLower()) || (permission.Description?.ToLower().Contains(_searchString.ToLower()) ?? false);
    private int GetGlobalSerialNumber(PermissionDto permission) => _filteredPermissions.IndexOf(permission) + 1;
    private string TruncateDescription(string? description) => string.IsNullOrEmpty(description) ? "-" : description.Length <= 50 ? description : description.Substring(0, 50) + "...";
    private int GetStartRecord() => _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    private int GetEndRecord() => Math.Min(_currentPage * _pageSize, _totalItems);
    private int GetStartPage() => Math.Max(1, _currentPage - 2);
    private int GetEndPage() => Math.Min(_totalPages, _currentPage + 2);
    private void GoToPage(int page) { if (page >= 1 && page <= _totalPages) { _currentPage = page; UpdateFilteredPermissions(); StateHasChanged(); } }
    async Task OpenAddDialog() {
        await JS.InvokeVoidAsync("disableScroll");
        await JS.InvokeVoidAsync("focusInputById", "popupFirstInput");

    _selectedPermission = null; _isEditMode = false; _permissionModel = new PermissionFormDialog.PermissionFormModel(); _isDialogOpen = true; }
     async Task OpenEditDialog(PermissionDto permission) { await JS.InvokeVoidAsync("disableScroll"); _selectedPermission = permission; _isEditMode = true; _permissionModel = new PermissionFormDialog.PermissionFormModel { Code = permission.Code, Name = permission.Name, Description = permission.Description }; _isDialogOpen = true; }
    async Task OpenViewDialog(PermissionDto permission) { await JS.InvokeVoidAsync("disableScroll"); _selectedPermission = permission; _isOffcanvasOpen = true; }
    async Task CloseDialog() { await JS.InvokeVoidAsync("enableScroll"); _isDialogOpen = false; _selectedPermission = null; _permissionModel = new PermissionFormDialog.PermissionFormModel(); _isEditMode = false; }
    async Task CloseOffcanvas() { await JS.InvokeVoidAsync("enableScroll"); _isOffcanvasOpen = false; _selectedPermission = null; }

    private async Task HandleSubmit(PermissionFormDialog.PermissionFormModel model)
    {
        _isSaving = true;
        try
        {
            if (_isEditMode && _selectedPermission != null)
            {
                var updateRequest = new UpdatePermissionRequest { Id = _selectedPermission.Id, Name = model.Name, Description = model.Description };
                var response = await RBACService.UpdatePermissionAsync(_selectedPermission.Id, updateRequest);
                if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Permission updated successfully"); await LoadPermissions(); CloseDialog(); }
                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to update permission"));
            }
            else
            {
                var createRequest = new CreatePermissionRequest { Code = model.Code, Name = model.Name, Description = model.Description };
                var response = await RBACService.CreatePermissionAsync(createRequest);
                if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Permission created successfully"); await LoadPermissions(); CloseDialog(); }
                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to create permission"));
            }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error saving permission"); await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}"); }
        finally { _isSaving = false; await JS.InvokeVoidAsync("enableScroll"); }
    }

    private async Task DeletePermission(PermissionDto permission)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation", "Delete Permission", $"Are you sure you want to delete '{permission.Name}'? This action cannot be undone.");
            if (confirmed)
            {
                var response = await RBACService.DeletePermissionAsync(permission.Id);
                if (response.Success) { await JS.InvokeVoidAsync("showToast", "success", "Permission deleted successfully"); await LoadPermissions(); }
                else await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to delete permission"));
            }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error deleting permission"); await JS.InvokeVoidAsync("showToast", "error", $"Error deleting permission: {ex.Message}"); }
    }
}