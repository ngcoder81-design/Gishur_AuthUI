@page "/department"
@using AuthManagement.Models
@using AuthManagement.Helpers
@using AuthManagement.Services
@using AuthManagement.Shared
@inject RBACService RBACService
@inject PermissionService PermissionService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<Department> Logger
@inject ISnackbar Snackbar
@attribute [Authorize]
@inject IJSRuntime JS
<PageTitle>Department Management</PageTitle>

<script src="js/InputFocus.js"></script>

<style>
    .toolbar-container{
        background: transparent;
        padding: 0;
        padding-bottom: 19px;
    }
    .pagination-container{
        background: transparent;
        border: none;
        margin-top: 37px;
    }
    .page-btn{
        background: white;
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    }
    </style>

<div class="flex-grow-1">
    @if (_isLoading)
    {
        <LoadingSpinner FullPage="true" />
    }
    else if (_hasError)
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled">
            @_errorMessage
        </MudAlert>
    }
    else
    {
        <div class="page-header" >
            <h1 class="page-title">Departments List</h1>
            <nav>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#" class="breadcrumb-link">
                            <i class="ti tabler-home"></i> Home
                        </a>
                        <span class="breadcrumb-separator">></span>
                    </li>
                    <li>
                        <span class="breadcrumb-current">Departments List</span>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="department-container" id="DepartmentDarktheme">
            <div class="toolbar-container" id="DepartmentDarktheme">
                <div class="toolbar-right">
                    <div class="search-box">
                        <input type="text"
                               class="search-input"
                               placeholder="Search Department"
                               value="@_searchString"
                               @oninput="e => OnSearchChanged(e.Value?.ToString() ?? string.Empty)" />

                        @if (string.IsNullOrEmpty(_searchString))
                        {
                            <i class="ti tabler-search search-icon"></i>
                        }
                    </div>

                    @if (_canAdd)
                    {
                        <button class="add-button"
                                @onclick="OpenAddDialog"
                                disabled="@_isSaving">
                            <i class="ti tabler-plus"></i>
                            <span>Add Department</span>
                        </button>
                    }
                </div>
            </div>
            @if (!_isSuperAdmin && _userDepartmentName != null)
            {
                <div style="margin:16px 20px;padding:12px 16px;background:#e3f2fd;border-left:4px solid #2196f3;border-radius:4px;">
                    <div style="display:flex;align-items:center;gap:8px;">
                        <i class="ti tabler-info-circle" style="color:#2196f3;font-size:20px;"></i>
                        <span style="color:#1976d2;font-size:14px;">
                            <strong>Department View Restriction:</strong>
                            You are viewing departments for:
                            <strong>@_userDepartmentName</strong>
                        </span>
                    </div>
                </div>
            }
            <div class="row g-4">
                @if (_pagedDepartments != null && _pagedDepartments.Any())
                {
                    @foreach (var department in _pagedDepartments)
                    {
                        var borderColor = departmentColors.TryGetValue(department.Id, out var color)
                        ? color
                        : "rgb(200,200,200)";
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="dept-card">
                                <div class="Badges" style="background:@borderColor;">
                                    @department.CreatedAt.ToString("MMMdd")
                                </div>
                                <div class="Image">
                                    <img src="assets/img/avatars/Department.png" alt="Department" />
                                </div>
                                <span class="dept-code" style="font-size:11px;color:#666;font-weight:600;text-transform:uppercase;letter-spacing:0.5px;">@department.Code</span>
                                <h2 class="dept-name">@department.Name</h2>
                                <p class="dept-desc">@department.Description</p>
                                <div class="Actions"
                                     style="--accent-color:@borderColor; background:@borderColor;">

                                    <div class="action-icon">
                                        <i class="ti tabler-eye"
                                           @onclick="() => OpenViewDialog(department)"></i>
                                    </div>

                                    <div class="action-icon">
                                        <i class="ti tabler-edit"
                                           @onclick="() => OpenEditDialog(department)"></i>
                                    </div>

                                    <div class="action-icon">
                                        <i class="ti tabler-trash"
                                           @onclick="() => DeleteDepartment(department)"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <NoResultsFound Message="No departments found"
                                        IconClass="ti tabler-building-off"
                                        SearchTerm="@_searchString" />
                    </div>
                }
            </div>

            @if (_pagedDepartments != null && _pagedDepartments.Any())
            {
                <div class="pagination-container" id="DepartmentDarktheme">
                    <div class="pagination-controls">

                        <!-- Mobile -->
                        <div class="pagination-buttons mobile-only">
                            <button class="page-btn"
                                    @onclick="() => GoToPage(1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage - 1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            <button class="page-btn active">@_currentPage</button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage + 1)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_totalPages)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                        <!-- Web -->
                        <div class="pagination-buttons web-only">
                            <button class="page-btn"
                                    @onclick="() => GoToPage(1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="bi bi-chevron-bar-left"></i>
                            </button>

                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage - 1)"
                                    disabled="@(_currentPage == 1)">
                                <i class="ti tabler-chevron-left"></i>
                            </button>

                            @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                            {
                                <button class="page-btn @(_currentPage == i ? "active" : "")"
                                        @onclick="() => GoToPage(i)">
                                    @i
                                </button>
                            }
                            <button class="page-btn"
                                    @onclick="() => GoToPage(_currentPage + 1)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="ti tabler-chevron-right"></i>
                            </button>
                            <button class="page-btn"
                                    @onclick="() => GoToPage(_totalPages)"
                                    disabled="@(_currentPage == _totalPages)">
                                <i class="bi bi-chevron-bar-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>

<DepartmentFormDialog IsOpen="_isDialogOpen"
                      IsEditMode="_isEditMode"
                      IsSaving="_isSaving"
                      FormModel="_departmentModel"
                      OnCancel="CloseDialog"
                      OnSubmit="HandleSubmit" />

<!-- Department Details Offcanvas -->
<DepartmentDetailsOffcanvas IsOpen="_isOffcanvasOpen"
                            Department="_selectedDepartment"
                            OnClose="CloseOffcanvas" />

@if (showPopup && selectedFeature != null)
{
    <div class="modal-backdrop show" @onclick:stopPropagation="true"></div>
    <div class="modal show d-block" tabindex="-1" @onclick:stopPropagation="true">
        <div class="modal-dialog modal-dialog-top">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Department Details
                    </h5>
                    <button type="button" class="btn-close" @onclick="closeSelectFeatures"></button>
                </div>
                <div class="modal-body" style="padding: 24px;">
                    <p><b>Description:</b> @selectedFeature.Name</p>
                    <p><b>Description:</b> @selectedFeature.Description</p>
                </div>
            </div>
        </div>
    </div>
}



@code {

    private List<DepartmentDto> _departments = new();
    private List<DepartmentDto> _filteredDepartments = new();
    private List<DepartmentDto> _pagedDepartments = new();
    private DepartmentDto? _selectedDepartment;
    private DepartmentFormDialog.DepartmentFormModel _departmentModel = new();
    private bool _isLoading = true;
    private bool _isSaving = false;
    private bool _isDialogOpen = false;
    private bool _isOffcanvasOpen = false;
    private bool _isEditMode = false;
    private bool _hasError = false;
    private string _errorMessage = string.Empty;
    private string _searchString = string.Empty;
    private string _sortColumn = "";
    private string _sortDirection = "";
    private int _currentPage = 1;
    private int _pageSize = 8; 
    private int _totalPages = 1;
    private int _totalItems = 0;
    private bool _canView = false;
    private bool _canAdd = false;
    private bool _canEdit = false;
    private bool _canDelete = false;
    private bool _isDeleting = false;
    private bool _isSuperAdmin = false;
    private string? _userDepartmentName = null;
    private Random random = new Random();
    bool showPopup = false;
    DepartmentDto? selectedFeature;

    void closeSelectFeatures()
    {
        showPopup = false;
    }

    void ShowDetails(DepartmentDto feature)
    {
        selectedFeature = feature;
        showPopup = true;
    }

    void ClosePopup()
    {
        showPopup = false;
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("loadScriptAndTrigger", "assets/js/toast.js", true);

        }
    }

    private string GenerateRandomColor()
    {
        return $"rgb({random.Next(256)}, {random.Next(256)}, {random.Next(256)})";
    }
    private Dictionary<Guid, string> departmentColors = new();
    // pagination
    private (int start, int end) GetMobilePageRange()
    {
        int start = _currentPage;
        int end = _currentPage + 1;

        if (end > _totalPages)
        {
            end = _totalPages;
            start = Math.Max(1, end - 1);
        }
        return (start, end);
    }
    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("Department page initializing...");

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                Logger.LogWarning("User not authenticated, redirecting to login");
                NavigationManager.NavigateTo("/login");
                return;
            }

            var permissions = await PermissionService.GetPagePermissionsAsync("/department");
            _canView = permissions.CanView;
            _canAdd = permissions.CanAdd;
            _canEdit = permissions.CanEdit;
            _canDelete = permissions.CanDelete;
            _isSuperAdmin = await PermissionService.IsSuperAdminAsync();
            var (departmentId, departmentName) = await PermissionService.GetUserDepartmentAsync();
            _userDepartmentName = departmentName;

            Logger.LogInformation("Permissions set - View: {View}, Add: {Add}, Edit: {Edit}, Delete: {Delete}, IsSuperAdmin: {IsSuperAdmin}, Department: {Department}",
                _canView, _canAdd, _canEdit, _canDelete, _isSuperAdmin, _userDepartmentName);

            await LoadDepartments();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing Department page");
            _hasError = true;
            _errorMessage = $"Error initializing page: {ex.Message}";
            _isLoading = false;
        }
    }

    private async Task LoadDepartments()
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            Logger.LogInformation("Loading departments...");
            var response = await RBACService.GetAllDepartmentsAsync();

            if (response.Success && response.Data != null)
            {
                _departments = response.Data;
                Logger.LogInformation("Loaded {Count} departments", _departments.Count);
                UpdateFilteredDepartments();

            }
            else
            {
                _hasError = true;
                _errorMessage = response.Message ?? "Failed to load departments";
                Logger.LogWarning("Failed to load departments: {Message}", _errorMessage);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading departments");
            _hasError = true;
            _errorMessage = $"Error loading departments: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void UpdateFilteredDepartments()
    {
        if (string.IsNullOrWhiteSpace(_searchString))
        {
            _filteredDepartments = _departments.ToList();
        }
        else
        {
            _filteredDepartments = _departments
                .Where(d => FilterFunc(d))
                .ToList();
        }

        _filteredDepartments = (_sortColumn, _sortDirection) switch
        {
            ("no", "asc") => _filteredDepartments.OrderBy(d => _departments.IndexOf(d)).ToList(),
            ("no", "desc") => _filteredDepartments.OrderByDescending(d => _departments.IndexOf(d)).ToList(),
            ("code", "asc") => _filteredDepartments.OrderBy(d => d.Code).ToList(),
            ("code", "desc") => _filteredDepartments.OrderByDescending(d => d.Code).ToList(),
            ("name", "asc") => _filteredDepartments.OrderBy(d => d.Name).ToList(),
            ("name", "desc") => _filteredDepartments.OrderByDescending(d => d.Name).ToList(),
            ("description", "asc") => _filteredDepartments.OrderBy(d => d.Description ?? string.Empty).ToList(),
            ("description", "desc") => _filteredDepartments.OrderByDescending(d => d.Description ?? string.Empty).ToList(),
            _ => _filteredDepartments 
        };

        _totalItems = _filteredDepartments.Count;
        _totalPages = _totalItems > 0 ? (int)Math.Ceiling((double)_totalItems / _pageSize) : 1;

        if (_currentPage > _totalPages)
        {
            _currentPage = _totalPages;
        }
        if (_currentPage < 1)
        {
            _currentPage = 1;
        }

        _pagedDepartments = _filteredDepartments
            .Skip((_currentPage - 1) * _pageSize)
            .Take(_pageSize)
            .ToList();


        foreach (var dept in _pagedDepartments)
        {
            if (!departmentColors.ContainsKey(dept.Id))
            {
                departmentColors[dept.Id] = GenerateRandomColor();
            }
        }
    }

    private void OnSearchChanged(string value)
    {
        _searchString = value;
        _currentPage = 1;
        UpdateFilteredDepartments();
        StateHasChanged();
    }
    private void ClearSearch()
    {
        _searchString = string.Empty;
        _currentPage = 1;
        UpdateFilteredDepartments();
        StateHasChanged();
    }

    private void ToggleSort(string column)
    {
        if (_sortColumn == column)
        {
            _sortDirection = _sortDirection == "asc" ? "desc" : "asc";
        }
        else
        {
            _sortColumn = column;
            _sortDirection = "asc";
        }
        UpdateFilteredDepartments();
        StateHasChanged();
    }

    private bool FilterFunc(DepartmentDto department)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;
        var searchLower = _searchString.ToLower();
        return department.Code.ToLower().Contains(searchLower) ||
               department.Name.ToLower().Contains(searchLower) ||
               (department.Description?.ToLower().Contains(searchLower) ?? false);
    }

    private int GetGlobalSerialNumber(DepartmentDto department)
    {
        var index = _filteredDepartments.IndexOf(department);
        return index + 1;
    }

    private string TruncateDescription(string? description)
    {
        if (string.IsNullOrEmpty(description))
            return "-";
        if (description.Length <= 50)
            return description;
        return description.Substring(0, 50) + "...";
    }

    private int GetStartRecord()
    {
        return _totalItems > 0 ? (_currentPage - 1) * _pageSize + 1 : 0;
    }

    private int GetEndRecord()
    {
        return Math.Min(_currentPage * _pageSize, _totalItems);
    }

    private int GetStartPage()
    {
        return Math.Max(1, _currentPage - 2);
    }

    private int GetEndPage()
    {
        return Math.Min(_totalPages, _currentPage + 2);
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= _totalPages)
        {
            _currentPage = page;
            UpdateFilteredDepartments();
            StateHasChanged();
        }
    }

     async Task OpenAddDialog()
    {
        _selectedDepartment = null;
        _isEditMode = false;
        _departmentModel = new DepartmentFormDialog.DepartmentFormModel();
        _isDialogOpen = true;
        await JS.InvokeVoidAsync("disableScroll");
        await JS.InvokeVoidAsync("focusInputById", "popupFirstInput");
    }

    async Task OpenEditDialog(DepartmentDto department)
    {
        _selectedDepartment = department;
        _isEditMode = true;
        await JS.InvokeVoidAsync("disableScroll");

        _departmentModel = new DepartmentFormDialog.DepartmentFormModel
        {
            Code = department.Code,
            Name = department.Name,
            Description = department.Description
        };
        _isDialogOpen = true;
    }

    async Task OpenViewDialog(DepartmentDto department)
    {
        _selectedDepartment = department;
        _isOffcanvasOpen = true;
        await JS.InvokeVoidAsync("disableScroll");

    }

    async Task CloseDialog()
    {
        _isDialogOpen = false;
        _selectedDepartment = null;
        _departmentModel = new DepartmentFormDialog.DepartmentFormModel();
        _isEditMode = false;
        await JS.InvokeVoidAsync("enableScroll");


    }

    async Task CloseOffcanvas()
    {
        _isOffcanvasOpen = false;
        _selectedDepartment = null;
        await JS.InvokeVoidAsync("enableScroll");

    }

    private async Task HandleSubmit(DepartmentFormDialog.DepartmentFormModel model)
    {
        _isSaving = true;
        try
        {
            if (_isEditMode && _selectedDepartment != null)
            {
                var updateRequest = new UpdateDepartmentRequest
                {
                    Id = _selectedDepartment.Id,
                    Name = model.Name,
                    Description = model.Description
                };

                var response = await RBACService.UpdateDepartmentAsync(_selectedDepartment.Id, updateRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Department updated successfully");
                    await LoadDepartments();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to update department"));
                }
            }
            else
            {
                var createRequest = new CreateDepartmentRequest
                {
                    Code = model.Code,
                    Name = model.Name,
                    Description = model.Description
                };

                var response = await RBACService.CreateDepartmentAsync(createRequest);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Department created successfully");
                    await LoadDepartments();
                    CloseDialog();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to create department"));
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving department");
            await JS.InvokeVoidAsync("showToast", "error", $"Error: {ex.Message}");
        }
        finally
        {
            _isSaving = false;
        }
    }

    private async Task DeleteDepartment(DepartmentDto department)
    {
        if (_isDeleting) return; 
        
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("showDeleteConfirmation",
                "Delete Department",
                $"Are you sure you want to delete '{department.Name}'? This action cannot be undone.");

            if (confirmed)
            {
                _isDeleting = true; 
                StateHasChanged();
                
                var response = await RBACService.DeleteDepartmentAsync(department.Id);
                if (response.Success)
                {
                    await JS.InvokeVoidAsync("showToast", "success", "Department deleted successfully");
                    await LoadDepartments();
                }
                else
                {
                    await JS.InvokeVoidAsync("showToast", "error", ErrorMessageHelper.FormatMessageAsBullets(response.Message ?? "Failed to delete department"));
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting department");
            await JS.InvokeVoidAsync("showToast", "error", $"Error deleting department: {ex.Message}");
        }
        finally
        {
            _isDeleting = false; 
            StateHasChanged();
        }
    }
}